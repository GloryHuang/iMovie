.scroll-container {
  background-color: #fff;
  margin-bottom: 10rpx;
  padding: 0 10rpx;
}

.scroll-container .title {
  display: flex;
  font-size: 35rpx;
  justify-content: space-between;
  background-color: #fff;
  padding: 10rpx 0;
}

.scrollView {
  width: 100%;

  white-space: nowrap;
}

.scroll_item {
  display: inline-block;
  padding: 0 5rpx;
  height: 100px;
  overflow: hidden;
}

.scroll_item.video {
  position: relative;
}

.scroll_item.video::before {
  content: "预告片";
  position: absolute;
  top: 4px;
  left: 4px;
  color: #fff;
  background-color: #e28e30;
  font-size: 11px;
  line-height: 1;
  padding: 3px;
  border-radius: 2px;
}

.scroll_item.video {
  width: 160px;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: cover;
}

.scroll_item.video .play {
  position: absolute;
  width: 0;
  height: 0;
  top: 50%;
  left: 50%;
}

.scroll_item.video image {
  width: 34px;
  height: 34px;
  /* display: inline-block; */
  transform: translate(-50%, -50%);
}

.scroll_item.video .time {
  color: #fff;
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 11px;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 2px 4px;
}

.scroll_item image {
  width: 150px;
  height: 100%;
  border-radius: 4px;
}
