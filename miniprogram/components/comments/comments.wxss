@import '../../template/rating/rating.wxss';
@import '../../template/loading/loading.wxss';

.cmt_container {
  background-color: white;
}

.cmt_title {
  /* border:1rpx solid red; */
  font-size: 35rpx;
  padding: 10rpx;
  border-bottom: 1px solid #e5e5e5;
}

.comments {
  /* border: 1rpx solid black; */
  padding: 12rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.comments image {
  width: 70rpx;
  height: 70rpx;
  /* border: 1rpx solid red; */
  border-radius: 50%;
}

.comt_header {
  display: flex;
}

.cmt_info {
  /* display: inline-block; */
  margin-left: 15rpx;
}

.cmt_info text {
  display: block;
  font-size: 25rpx;
  color: #333;
  line-height: 36rpx;
}

.cmt_content, .cmt_footer {
  padding: 5rpx;
  font-size: 28rpx;
  margin-left: 80rpx;
}

.cmt_content text {
  line-height: 1.5;
  color: #333;
  font-size: 30rpx;
}

.cmt_footer {
  display: flex;
  justify-content: space-between;
  color: #666;
}

.cmt_like {
  line-height: 25rpx;
  height: 25rpx;
  /* border: 1rpx solid red; */
}

.cmt_footer .cmt_like::before {
  content: '';
  display: inline-block;
  background: url(data:image/png;base64,) no-repeat;
  background-size: 24rpx 24rpx;
  width: 30rpx;
  height: 30rpx;
  /* line-height: 26rpx; */
  vertical-align: middle;
  /* padding-right: 5rpx; *//* border: 1rpx solid red; *//* margin-right: 70rpx; */
}

.nocomment {
  display: flex;
  height: 120rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  color: #ccc;
}

.morecomt {
  display: flex;
  height: 80rpx;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
  color: #f03d37;
}
